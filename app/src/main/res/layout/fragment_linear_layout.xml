<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topics.t1_uicomponents.layouts.LinearLayoutFragment">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/lightGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv1Linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:layout_weight="1"
            android:text="LinearLayout, orientation: vertical"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv2Linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:gravity="start|center_vertical"
            android:layout_weight="2"
            android:background="@color/lightBlue"
            android:text="gravity: start|center_vertical, layout_weight: 2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv3Linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/lightGreen"
            android:text="gravity: center, layout_weight: 1"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv4Linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:gravity="end|center_vertical"
            android:layout_weight="1"
            android:background="@color/lightYellow"
            android:text="gravity: end|center_vertical, layout_weight: 1"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnLinear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:layout_weight="2"
            android:text="layout_weight:2" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv5Linear"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:text="LinearLayout, orientation: horizontal"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/gray"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5Linear">

        <TextView
            android:id="@+id/tv6Linear"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="1"
            android:background="@color/lightYellow"
            android:gravity="center"
            android:padding="8dp"
            android:text="One"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv7Linear"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="1"
            android:background="@color/lightYellow"
            android:gravity="center"
            android:padding="8dp"
            android:text="Two"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv8Linear"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="1"
            android:background="@color/lightYellow"
            android:gravity="center"
            android:padding="8dp"
            android:text="Three"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv9Linear"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:layout_weight="1"
            android:background="@color/lightYellow"
            android:gravity="center"
            android:padding="8dp"
            android:text="Four"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/darkerGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/tv10Linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:layout_weight="0.6"
            android:layout_gravity="start"
            android:gravity="start|center_vertical"
            android:text="Difference between 'gravity' and 'layout_gravity'"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv11Linear"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_gravity="start"
            android:gravity="start|center_vertical"
            android:text="layout_gravity: start,\ngravity: start|center_vertical"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv12Linear"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:text="layout_gravity: center,\ngravity: start|center_vertical"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv13Linear"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:padding="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_gravity="end"
            android:gravity="start|center_vertical"
            android:text="layout_gravity: end,\ngravity: start|center_vertical"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
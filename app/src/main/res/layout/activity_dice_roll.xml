<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topics.t3_architecturecomponents.s5_viewmodels.ex1.DiceRollActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/txtNumOfRollsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Rolls:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/includeToolbar" />

    <TextView
        android:id="@+id/txtDie1Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Die 1:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNumOfRollsLabel" />

    <TextView
        android:id="@+id/txtDie2Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Die 2:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDie1Label" />

    <TextView
        android:id="@+id/txtRolls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtNumOfRollsLabel"
        app:layout_constraintStart_toEndOf="@+id/txtNumOfRollsLabel"
        app:layout_constraintTop_toTopOf="@+id/txtNumOfRollsLabel" />

    <TextView
        android:id="@+id/txtDie1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDie1Label"
        app:layout_constraintStart_toEndOf="@+id/txtDie1Label"
        app:layout_constraintTop_toTopOf="@+id/txtDie1Label" />

    <TextView
        android:id="@+id/txtDie2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/txtDie2Label"
        app:layout_constraintStart_toEndOf="@+id/txtDie2Label"
        app:layout_constraintTop_toTopOf="@+id/txtDie2Label" />

    <Button
        android:id="@+id/btnRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Roll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDie2" />


</androidx.constraintlayout.widget.ConstraintLayout>
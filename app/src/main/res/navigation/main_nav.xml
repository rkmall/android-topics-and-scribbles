<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/drawerMainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.rm.android_fundamentals.topics.t0.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_otherFragment"
            app:destination="@id/otherFragment" />
        <action
            android:id="@+id/action_mainFragment_to_drawerMainFragment"
            app:destination="@id/drawerMainFragment" />
    </fragment>
    <fragment
        android:id="@+id/otherFragment"
        android:name="com.rm.android_fundamentals.topics.t0.OtherFragment"
        android:label="fragment_other"
        tools:layout="@layout/fragment_other" >
        <action
            android:id="@+id/action_otherFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/drawerMainFragment"
        android:name="com.rm.android_fundamentals.topics.t0.MainExpandableTopicFragment"
        android:label="fragment_drawer_main"
        tools:layout="@layout/fragment_main_expandable_topic" />
</navigation>